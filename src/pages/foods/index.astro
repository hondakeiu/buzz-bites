---
import Pageheader from "../../components/Pageheader.astro";
import Partition from "../../components/Partition.astro";
import { data } from "../../contents/meta/data";
import { allFoods } from "../../features/foods/data";
import Layout from "../../layouts/Layout.astro";

let allCurrent = 0;
let allTotal = 0;
allFoods.forEach((group) => {
  allCurrent += group.items.filter((item) => item.date !== null).length;
  allTotal += group.items.length;
});
---

<Layout meta={data["foods"]}>
  <div class="foods">
    <Pageheader text="食材" />
    <div class="foods__category">
      <div class="inner">
        <ul>
          <li>
            <a href="#" class="item">
              <div class="item__count">
                <span class="text text--en large">{allCurrent}</span>
                <span class="text text--en small">/{allTotal}</span>
              </div>
              <div class="item__name">
                <p class="text text--jp">全て</p>
              </div>
            </a>
          </li>
          {
            allFoods.map((group) => {
              const current = group.items.filter((item) => item.date !== null).length;
              const total = group.items.length;
              return (
                <li>
                  <a href={`#${group.id}`} class="item">
                    <div class="item__count">
                      <span class="text text--en large">{current}</span>
                      <span class="text text--en small">/{total}</span>
                    </div>
                    <div class="item__name">
                      <p class="text text--jp">{group.name}</p>
                    </div>
                  </a>
                </li>
              );
            })
          }
        </ul>
      </div>
    </div>
    <div class="foods__list">
      <Partition />
      <div class="inner inner--m">
        {
          allFoods.map((group) => {
            const like = group.items.filter((item) => item.status === "好き").length;
            const normal = group.items.filter((item) => item.status === "普通").length;
            const dislike = group.items.filter((item) => item.status === "嫌い").length;
            return (
              <section id={group.id} class="group">
                <div class="group__heading">
                  <h2 class="text text--jp">{group.name}</h2>
                  <div class="group__heading__count">
                    <span class="heart heart--f heart--rf" />
                    <span class="text text--en">{like}</span>
                    <span class="heart heart--f heart--of" />
                    <span class="text text--en">{normal}</span>
                    <span class="heart heart--f heart--bf" />
                    <span class="text text--en">{dislike}</span>
                  </div>
                </div>
                <ul>
                  {group.items.map((item) => {
                    const date = item.date ? item.date.replace(/-/g, "/") : "-";
                    return (
                      <li>
                        <div class="item">
                          <span class:list={["heart heart--f", item.status === "好き" && "heart--rf", item.status === "普通" && "heart--of", item.status === "嫌い" && "heart--bf", !item.status && "heart--gf", "item__status"]} />
                          <p class="text text--jp item__name">{item.name}</p>
                          <p class="text text--en item__date">{date}</p>
                        </div>
                      </li>
                    );
                  })}
                </ul>
              </section>
            );
          })
        }
      </div>
    </div>
  </div>
</Layout>

<style lang="scss">
  .foods {
    padding: calc(6rem + 2rem) 0 calc(6rem + 4rem);
    &__category {
      .inner {
        overflow-y: scroll;
        &::-webkit-scrollbar {
          display: none;
        }
      }
      ul {
        position: relative;
        display: flex;
        padding: 1rem 0;
        column-gap: 1rem;
        li {
          &:first-of-type {
            padding-left: 2rem;
          }
          &:last-of-type {
            padding-right: 2rem;
          }
        }
        .item {
          display: flex;
          flex-direction: column;
          align-items: center;
          &__count {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 5.5rem;
            height: 5.5rem;
            background: var(--yellow);
            border-radius: 50%;
            .large {
              font-size: 1.8rem;
              line-height: 1;
            }
            .small {
              font-size: 1rem;
              line-height: 1;
              margin-top: 1rem;
            }
          }
          &__name {
            margin-top: 0.5rem;
            p {
              display: block;
              font-size: 1.2rem;
            }
          }
        }
      }
    }
    &__list {
      margin-top: 2rem;
      .inner {
        display: flex;
        flex-direction: column;
        row-gap: 2rem;
        margin-top: 3rem;
      }
      .group {
        &__heading {
          display: flex;
          align-items: center;
          justify-content: space-between;
          background: var(--yellow);
          height: 4rem;
          border-radius: 9999px;
          padding: 0 2rem;
          h2 {
            font-size: 1.4rem;
          }
          &__count {
            display: flex;
            .heart {
              width: 1.4rem;
              height: 1.4rem;
              margin-left: 0.6rem;
            }
            .text {
              font-size: 1.1rem;
              margin-left: 0.2rem;
            }
          }
        }
        ul {
          display: flex;
          flex-direction: column;
          margin-top: 2rem;
          padding: 0 2rem;
          row-gap: 1rem;
          li {
          }
          .item {
            display: flex;
            justify-content: space-between;
            column-gap: 1rem;
            &__status {
              width: 1.2rem;
              height: 1.2rem;
              margin-top: 0.3rem;
            }
            &__name {
              font-size: 1.4rem;
            }
            &__date {
              min-width: 6rem;
              text-align: center;
              font-size: 1rem;
              margin-left: auto;
              margin-top: 0.3rem;
            }
          }
        }
      }
    }
  }
</style>
