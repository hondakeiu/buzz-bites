---
import { data } from "../contents/meta/data";
import Layout from "../layouts/Layout.astro";
---

<Layout meta={data["home"]}>
  <div class="home">
    <div class="inner inner--m">
      <div class="home__heading">
        <h1>
          <img src="/images/logo.svg" alt="ぶんぶんごはん" />
        </h1>
      </div>
      <div class="home__image">
        <img src="/images/mv.png" alt="" />
      </div>
    </div>
  </div>
</Layout>

<style lang="scss">
  .home {
    height: 100dvh;
    min-height: 39rem;
    padding-bottom: 6rem;
    .inner {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100%;
    }
    &__heading {
      width: 25rem;
      h1 {
        display: block;
      }
    }
    &__image {
      width: 30rem;
      margin-top: 4rem;
    }
  }
</style>
